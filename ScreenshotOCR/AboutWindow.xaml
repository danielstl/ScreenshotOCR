<Window x:Class="ScreenshotOCR.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenshotOCR"
        mc:Ignorable="d"
        Title="AboutWindow" Height="360" Width="500">
    <Grid>
        <Grid Margin="10,5,10,0" Height="64" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="58"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Image Source="logo.ico" Grid.RowSpan="2" Width="48" HorizontalAlignment="Left"/>
            <Label Grid.Row="0" Grid.Column="1" Content="ScreenshotOCR" FontFamily="Segoe UI Semilight" FontSize="18" Padding="0" VerticalAlignment="Bottom" Height="24"/>
            <Label Grid.Row="1" Grid.Column="1" Content="v1.0" FontFamily="Segoe UI Semilight" FontSize="12" Padding="0" Foreground="#FF3E3E3E" VerticalAlignment="Top" Height="16"/>
        </Grid>
        <WebBrowser Margin="10,69,10,10"/> <!--todo (about screen to display info about tesseract, material icons etc, maybe update check)-->

    </Grid>
</Window>
