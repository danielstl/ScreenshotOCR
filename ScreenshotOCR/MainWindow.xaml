<Window x:Class="ScreenshotOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenshotOCR"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="500">
    <Grid>
        <Label Content="ScreenshotOCR" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI Semilight"/>
        <Button x:Name="screenshotButton" Content="Take screenshot" HorizontalAlignment="Left" Margin="10,52,0,10" Width="170" Click="screenshotButton_Click"/>

    </Grid>
</Window>
