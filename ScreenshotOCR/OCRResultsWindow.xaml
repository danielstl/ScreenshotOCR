<Window x:Class="ScreenshotOCR.OCRResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenshotOCR"
        mc:Ignorable="d" Opacity="0.98"
        Height="280" Width="500" Topmost="True" WindowStyle="None" Background="Transparent" AllowsTransparency="True" MouseDown="Window_MouseDown">
    <Border BorderBrush="#eeeeee" BorderThickness="3" CornerRadius="1" Background="#eeeeee">
        <Grid>
            <Label Content="The following text was found in your screenshot" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="resultsTextBox" Margin="0,26,0,0" TextWrapping="Wrap" Padding="5" VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsReadOnlyCaretVisible="True" MouseDown="resultsTextBox_MouseDown"/>
            <Button Name="pinButton" Content="Pin" Height="16" Margin="0,5,0,0" VerticalAlignment="Top" Click="pinButton_Click" HorizontalAlignment="Right" Width="40"/>
        </Grid>
    </Border>
</Window>
